import java.util.*;

public class Main {
	public int solution(String str, char t) {
		int answer = 0;
		str = str.toUpperCase();
		t = Character.toUpperCase(t); // character의 toUpperCase함수를 사용하기 위해서는 character클래스의 함수를 사용해야 한다.
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == t) answer++;
		}
		
		return answer;
	}
	
	public static void main(String[] args) {
		Main M = new Main(); // solution함수를 static으로 선언하지 않았기 때문에 Main 클래스 객체를 생성하여 solution함수를 호출해야 한다.
		Scanner kb = new Scanner(System.in);
		String str = kb.next();
		char t = kb.next().charAt(0); // scanner클래스의 next함수는 string을 반환하므로 string의 인덱스 접근을 위해 chatAt함수를 사용해야 한다.
		System.out.println(M.solution(str, t));
		kb.close();
	}
}

/* 8-9번 라인의 for문을 for-each 구문을 사용해 작성할 수 있다.
for (char x : str.toCharArray()) { // for-each 구문에는 문자형 배열 또는 itoration 형식만 올 수 있다.
  if (x==t) answer++;
}
와 같이 수정할 수 있다. */
